{
  "name": "@pokeforge/sdk",
  "version": "0.1.0",
  "description": "Official PokeForge API SDK for TypeScript/JavaScript",
  "author": "PokeForge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pokeforge/pokeforge-sdk.git",
    "directory": "packages/typescript"
  },
  "homepage": "https://github.com/pokeforge/pokeforge-sdk/tree/main/packages/typescript#readme",
  "bugs": {
    "url": "https://github.com/pokeforge/pokeforge-sdk/issues"
  },
  "keywords": [
    "pokeforge",
    "pokemon",
    "tcg",
    "trading-cards",
    "api",
    "sdk"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "generate": "openapi-typescript ../../openapi/openapi.json -o src/generated/api.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "openapi-typescript": "^7.4.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
